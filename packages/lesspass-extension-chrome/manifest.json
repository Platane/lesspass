{
  "description": "chrome and firefox web extension for lesspass password manager",
  "manifest_version": 2,
  "name": "LessPass",
  "version": "9.1.4",
  "homepage_url": "https://github.com/lesspass/lesspass",
  "icons": {
    "64": "icons/logo-64.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "app.html#options",
  "permissions": ["https://*/*", "http://*/*", "activeTab", "storage"],
  "browser_action": {
    "browser_style": false,
    "default_icon": "icons/logo-32.png",
    "default_title": "LessPass",
    "default_popup": "popup.html"
  }
}
